<h1>Products</h1>
{{#if isAdmin}}
  {{#if products.length}}
    {{#each products}}
      <div class="row">
        <div class="col s6 offset-s3">
          <div class="card">
            <div class="card-image">
              <img src="{{image}}" />
            </div>
            <div class="card-content">
              <span class="card-title">{{title}}</span>
              <p class="price">{{price}}</p>
            </div>
            <div class="card-action actions">
              <a href="/products/{{_id}}" target="_blank">Open product</a>
              <a href="/products/{{_id}}/edit">Edit product</a>
              <button class="btn btn-small red" data-id-product="{{_id}}">Delete
                product</button>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
    <div class="row">
      <div class="col s6 offset-s3">
        <a href="/products/add" class="btn">Add new product</a>
      </div>
    </div>
  {{else}}
    <p>not any products</p>
    <a href="/products/add" class="btn">Add new product</a>
  {{/if}}
{{else}}
  {{#if products.length}}
    {{#each products}}
      <div class="row">
        <div class="col s6 offset-s3">
          <div class="card">
            <div class="card-image">
              <img src="{{image}}" />
            </div>
            <div class="card-content">
              <span class="card-title">{{title}}</span>
              <p class="price">{{price}}</p>
              <p class="text">{{category}}</p>
            </div>
            <div class="card-action actions">
              <a href="/products/{{_id}}" target="_blank">Open product</a>
              <a href="/cart/add-to-cart/{{_id}}" class="btn">Add to Cart</a>
            </div>
          </div>

        </div>
      </div>
    {{/each}}
  {{else}}
    <p>not any products</p>
  {{/if}}
{{/if}}